  position: relative;
  height: 50px;
  line-height: 50px;
  margin: 10px 0;

  label,
  .input-field label {
    line-height: initial;
    position: absolute;
    top: 0;
    transform: translateY(-100%);
  }

  .price-wrapper {
    height: inherit;
    line-height: inherit;
    float: left;

    [data-product-price] {
      font-size: 28px;
      vertical-align: middle;
    }

    [data-compare-price] {
      font-size: 16px;
      vertical-align: middle;
      color: rgba(0,0,0,.6);
    }
  }

  .quantity-counter {
    height: inherit;
    line-height: inherit;
    float: right;

    label {
      right: 0;
      left: auto;
    }

    input[type=number],
    .remove,
    .add {
      vertical-align: middle;
    }
  }

}

.gallery-item.active .gallery-overlay {
  display: none;
}
.gallery-overlay {
  &:hover {
    background-color: rgba(0,0,0,.4);
    opacity: 1;

    .overlay-header {
      transform: scale(1);
    }
  }

  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: background-color .2s, opacity .2s;

  .overlay-header {
    font-size: 36px;
    text-align: center;
    color: #fff;
    transform: scale(.5);
    transition: transform .2s;

    .price,
    .spr-badge {
      font-size: 14px;
      display: block;
    }

    .spr-badge {
      margin-top: 5px;
    }
  }
}

body:not(.gallery-dark-theme) .col .gallery-overlay {
  left: .75rem;
  right: .75rem;
}

// Standalone product page styles
.product-standalone {
  &.gallery .col {
    padding: 0 .75rem;
  }

  margin-bottom: 20px;

  .gallery-body {
    display: block;
    position: relative;
    margin: 20px 0 0 0;
    width: auto;
    background-color: transparent;

    .checkout-column {
      float: none;
      margin-top: 40px;
    }

    .carousel-wrapper {
      margin-left: 0;
      margin-right: 0;
      width: 100%;
    }
  }
}

.gallery-dark-theme {
  .product-standalone {
    color: rgba(255,255,255,.87);

    .spr-container {
      border-color: transparent;
      background-color: rgba(255,255,255,.1);
    }
  }

  .overlay-title {
